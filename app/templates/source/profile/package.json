			}
		},
		"posts.html": {
			"url": [
				"/posts",
				"/posts/page/:page",
				"/posts/:tag",
				"/posts/:tag/page/:page"
			],
			"partials": {
				"title": "{{{title}}}",
				"description": "Latest entries from {{{title}}}"
			}
		},
		"index.html": {
			"url": [
				"/", "/page/:page"
			],
			"partials": {
				"title": "{{{title}}}",
				"description": "Latest entries from {{{title}}}"
			}
		},
		"entry.html": {
			"partials": {
				"title": "{{{entry.title}}} – {{{title}}}",
				"description": "{{{entry.summary}}}"
			}
		},
		"error.html": {
			"partials": {
				"title": "{{{error.title}}} – {{{title}}}",
				"description": "{{{error.message}}}"
			}
		},
		"search.html": {
			"url": "/search",
			"partials": {
				"title": "Search – {{{title}}}",
				"description": "Search posts on {{{title}}}"
			}
		}
