		"page_size": 10,
		"main_content_width": 440,
		"main_content_width_range": [
			100,
			800
		],
		"text_color": "#111111",
		"background_color": "#ffffff",
		"link_color": "#0070f3",
		"font": {
			"id": "geist-mono",
			"font_size": 14.8,
			"line_height": 1.8
		}
	},
	"enabled": true,
	"views": {
		"archive.html": {
			"url": "/archive",
			"partials": {
				"title": "Archive – {{{title}}}",
