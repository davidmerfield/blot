{
  "name": "Serif",
  "locals": {
    "page_size": 18,
    "text_color": "#000000",
    "background_color": "#ffffff",
    "accent_color": "#0000FF",
    "navigation_background_color": "#ffffff",
    "hide_dates": false,
    "date_display": "MMMM D, Y",
    "body_font": {
      "font_size": 24,
      "line_height": 1.5
    },
    "syntax_highlighter": {
      "id": "stackoverflow-light"
    },
    "syntax_highlighter_font": {
      "font_size": 18
    }
  },
  "isPublic": false,
  "views": {
    "public": {
      "partials": {
        "title": "Index of {{{path}}}",
        "description": "All the files and folders inside {{{path}}}"
      }
    },
    "archives.html": {
      "url": "/archives",
      "partials": {
        "title": "Archives - {{{title}}}",
        "description": "All the entries posted on {{{title}}}"
      }
    },
    "tagged.html": {
      "partials": {
        "title": "Entries tagged {{{tag}}} from {{{title}}}",
        "description": "All of the entries posted on {{{title}}} tagged {{{tag}}}"
      }
    },
    "entries.html": {
      "partials": {
        "title": "{{{title}}}",
        "description": "The latest entries posted on {{{title}}}"
      }
    },
    "error.html": {
      "partials": {
        "title": "{{{error.title}}} - {{{title}}}",
        "description": "Error on {{{title}}}"
      }
    },
    "entry.html": {
      "partials": {
        "title": "{{{entry.title}}} - {{{title}}}",
        "description": "{{{entry.summary}}}"
      }
    },
    "search.html": {
      "partials": {
        "title": "Search - {{{title}}}",
        "description": "Search all the entries posted on {{{title}}}"
      }
    }
  }
}
